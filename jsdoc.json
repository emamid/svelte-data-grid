{
	"plugins": [
		"node_modules/better-docs/component",
		"node_modules/better-docs/typescript"
	],
	"typescript": {
		"moduleRoot": "src"
	},
	"recurseDepth": 10,
	"source": {
		"include": [
			"src"
		],
		"includePattern": ".\\.(js|ts)$",
		"excludePattern": "(node_modules/|docs)"
	},
	"templates": {
		"cleverLinks": true,
		"monospaceLinks": true
	},
	"opts": {
		"destination": "./docs",
		"readme": "README.md",
		"recurse": true,		
		"template": "node_modules/better-docs"
	},
	"tags": {
		"allowUnknownTags": ["component"]
	}	
}
